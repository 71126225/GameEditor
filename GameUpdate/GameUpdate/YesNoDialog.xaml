<Window x:Class="GameUpdate.YesNoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameUpdate"
        mc:Ignorable="d" Height="212" Width="394">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="239*"/>
            <ColumnDefinition Width="53*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="mButtonNo" Content="否" HorizontalAlignment="Left" Margin="255,135,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.603,0.059" Height="28" Click="mButtonNo_Click" Grid.ColumnSpan="2"/>
        <Label x:Name="mInfo" Margin="10,10,6,0" VerticalAlignment="Top" RenderTransformOrigin="-0.326,0.464" Width="370" Height="110" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.ColumnSpan="2">
            <TextBlock x:Name="mInfoBlock" TextWrapping="Wrap" Width="355" TextAlignment="Center"/>
        </Label>
        <Button x:Name="mButtonYes" Content="是" HorizontalAlignment="Left" Margin="85,132,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.603,0.059" Height="28" Click="mButtonYes_Click"/>

    </Grid>
</Window>
